generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  balance      Float         @default(0)
  btcWallet    BtcWallet?                                // Optional 1:1 relation
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt @default(now())  // âœ… Required with default
  transactions Transaction[]                             // 1:N relation to transactions
}

model Transaction {
  id        Int       @id @default(autoincrement())
  amount    Float
  currency  String    // e.g. 'btc', 'eth', 'usdt'
  type      String    // 'deposit' | 'withdraw'
  status    String    // 'pending' | 'confirmed' | 'failed'
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime  @default(now())
}

model BtcWallet {
  id         Int      @id @default(autoincrement())
  address    String   @unique
  user       User     @relation(fields: [userId], references: [id])  // Required side of 1:1
  userId     Int      @unique                                        // Enforces 1:1
  balance    Float    @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime? @updatedAt
}
